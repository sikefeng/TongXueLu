<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/white" />
            <!-- <corners android:radius="0.5dip"/>-->
            />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="180dip" />
            <stroke android:width="1dip" android:color="#41a3f5" />
            <solid android:color="#41a3f5"  />
            <size android:height="10dip" android:width="10dip"/>
            <padding android:top="0px" android:bottom="0px" android:left="0px" android:right="0px"/>
        </shape>
    </item>
</selector>