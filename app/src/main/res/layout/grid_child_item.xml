<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <com.sikefeng.tongxuelu.multipleimages.MyImageView
        android:id="@+id/child_image"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:scaleType="fitXY"
        android:background="@drawable/friends_sends_pictures_no" />

    <CheckBox
        android:id="@+id/child_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/child_image"
        android:visibility="gone"
        android:layout_alignRight="@id/child_image"
        android:button="@drawable/checkbox_bg" />
</RelativeLayout>

