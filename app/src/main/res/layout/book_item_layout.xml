<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/book_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_book"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color"
            android:text="文件名"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bookcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLength="30"
            android:singleLine="true"
            android:text="文件内容"
            android:textColor="@drawable/contact_list_item_buddy_signature_text_color2"
            android:textSize="12.0sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/image_book"
        android:layout_marginRight="5dp"
        android:text="时间"
        android:textColor="@drawable/contact_list_item_buddy_signature_text_color2"
        android:textSize="12.0sp"  />
</RelativeLayout>