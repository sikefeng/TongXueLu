<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/login_progress"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        android:paddingLeft="24dip"
        android:paddingRight="24dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login_img" />

        <com.sikefeng.tongxuelu.widgets.ClearEditText
            android:id="@+id/emaileditText"
            android:layout_width="fill_parent"
            android:layout_height="44.6dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dip"
            android:background="@drawable/demo_account_text_bg"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="18dip"
            android:gravity="center_vertical"
            android:hint="请输入邮箱"
            android:inputType="textEmailSubject"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textColorHint="#7F7F7F"
            android:textSize="15sp" />

        <com.sikefeng.tongxuelu.widgets.ClearEditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="44.6dip"
            android:layout_below="@+id/emaileditText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/demo_select_account_bottom_normal"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textColorHint="#7F7F7F"
            android:textSize="15sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/regbutton"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="25dp"
        android:background="@drawable/blue_btn_bg"
        android:onClick="regClick"
        android:textColor="@drawable/text_white_blue"
        android:text="提交"
        android:textSize="20sp" />

</LinearLayout>